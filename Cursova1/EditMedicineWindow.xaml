<Window x:Class="Cursova1.EditMedicineWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Edit medications" Height="238" Width="359">
    <Grid Height="247" VerticalAlignment="Top">
        <TextBlock Text="Name:" Margin="10,28,10,0" VerticalAlignment="Top" />
        <TextBox Text="{Binding Name, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="122,27,0,0"/>

        <TextBlock Text="Number:" Margin="10,59,10,0" VerticalAlignment="Top" />
        <TextBox Text="{Binding Quantity, Mode=TwoWay}"  VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="122,59,0,0"/>

        <TextBlock Text="Interchangeability:" Margin="10,95,10,0" VerticalAlignment="Top" />
        <TextBox Text="{Binding Interchangeable, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="122,95,0,0"/>

        <Button Content="OK" IsDefault="True"  VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Height="30" Margin="85,153,0,0" Click="OK_Click"/>
        <Button Content="Cansel" IsCancel="True" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Height="30" Margin="0,153,87,0" Click="Cancel_Click"/>
    </Grid>
</Window>
